        function showTerms(type) {
            let title, content;
            
            switch (type) {
                case 'service':
                    title = 'ì„œë¹„ìŠ¤ ì´ìš©ì•½ê´€';
                    content = 'ì„œë¹„ìŠ¤ ì´ìš©ì•½ê´€ ë‚´ìš©ì´ ì—¬ê¸°ì— í‘œì‹œë©ë‹ˆë‹¤.';
                    break;
                case 'privacy':
                    title = 'ê°œì¸ì •ë³´ ìˆ˜ì§‘ ë° ì´ìš© ë™ì˜';
                    content = 'ê°œì¸ì •ë³´ ìˆ˜ì§‘ ë° ì´ìš©ì— ê´€í•œ ë‚´ìš©ì´ ì—¬ê¸°ì— í‘œì‹œë©ë‹ˆë‹¤.';
                    break;
                case 'marketing':
                    title = 'ë§ˆì¼€íŒ… ì •ë³´ ìˆ˜ì‹  ë™ì˜';
                    content = 'ë§ˆì¼€íŒ… ì •ë³´ ìˆ˜ì‹ ì— ê´€í•œ ë‚´ìš©ì´ ì—¬ê¸°ì— í‘œì‹œë©ë‹ˆë‹¤.';
                    break;
                default:
