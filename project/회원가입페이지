    <script>
        // í”„ë¡œí•„ ì´ë¯¸ì§€ ë¯¸ë¦¬ë³´ê¸°
        document.getElementById('profileImage').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const preview = document.getElementById('profilePreview');
                    preview.innerHTML = `<img src="${e.target.result}" alt="í”„ë¡œí•„ ì´ë¯¸ì§€">`;
                }
                reader.readAsDataURL(file);
            }
        });
        
        // ë¹„ë°€ë²ˆí˜¸ ê°•ë„ ì²´í¬
        document.getElementById('password').addEventListener('input', function(e) {
            const password = e.target.value;
            const strengthMeter = document.getElementById('passwordStrength');
            
            // ë¹„ë°€ë²ˆí˜¸ ê°•ë„ ê³„ì‚° (ê°„ë‹¨í•œ ì˜ˆì‹œ)
            let strength = 0;
            
            if (password.length >= 8) strength += 1;
            if (/[A-Z]/.test(password)) strength += 1;
            if (/[0-9]/.test(password)) strength += 1;
            if (/[^A-Za-z0-9]/.test(password)) strength += 1;
            
            // ê°•ë„ì— ë”°ë¥¸ ì‹œê°ì  í‘œì‹œ
            strengthMeter.className = 'strength-meter';
            if (password.length === 0) {
                strengthMeter.style.width = '0';
            } else if (strength <= 2) {
                strengthMeter.classList.add('strength-weak');
            } else if (strength === 3) {
                strengthMeter.classList.add('strength-medium');
            } else {
                strengthMeter.classList.add('strength-strong');
            }
        });
        
        // ë¹„ë°€ë²ˆí˜¸ í™•ì¸ ì²´í¬
        document.getElementById('passwordConfirm').addEventListener('input', function(e) {
            const password = document.getElementById('password').value;
            const confirmPassword = e.target.value;
            const errorElement = document.getElementById('passwordConfirmError');
            
            if (confirmPassword && password !== confirmPassword) {
                errorElement.classList.add('visible');
            } else {
                errorElement.classList.remove('visible');
            }
        });
        
        // ì´ë©”ì¼ ì¤‘ë³µ í™•ì¸
        document.getElementById('emailCheck').addEventListener('click', function() {
            const email = document.getElementById('email').value;
            const errorElement = document.getElementById('emailError');
            
            if (!email) {
                alert('ì´ë©”ì¼ì„ ì…ë ¥í•´ì£¼ì„¸ìš”.');
                return;
            }
            
            // ì´ë©”ì¼ í˜•ì‹ ê²€ì‚¬
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailRegex.test(email)) {
                errorElement.textContent = 'ì˜¬ë°”ë¥¸ ì´ë©”ì¼ í˜•ì‹ì´ ì•„ë‹™ë‹ˆë‹¤.';
                errorElement.classList.add('visible');
                return;
            }
            
            // ì„œë²„ í†µì‹  ëŒ€ì‹  ì„ì‹œë¡œ ì‚¬ìš©í•  ê²€ì¦ (ì‹¤ì œë¡œëŠ” ì„œë²„ì— ì¤‘ë³µ í™•ì¸ ìš”ì²­)
            const isAvailable = Math.random() > 0.3; // 70% í™•ë¥ ë¡œ ì‚¬ìš© ê°€ëŠ¥
            
            if (isAvailable) {
                alert('ì‚¬ìš© ê°€ëŠ¥í•œ ì´ë©”ì¼ì…ë‹ˆë‹¤.');
                errorElement.classList.remove('visible');
            } else {
                errorElement.textContent = 'ì´ë¯¸ ì‚¬ìš© ì¤‘ì¸ ì´ë©”ì¼ì…ë‹ˆë‹¤.';
                errorElement.classList.add('visible');
            }
        });
        
        // ë‹‰ë„¤ì„ ì¤‘ë³µ í™•ì¸
        document.getElementById('nicknameCheck').addEventListener('click', function() {
            const nickname = document.getElementById('nickname').value;
            const errorElement = document.getElementById('nicknameError');
            
            if (!nickname) {
                alert('ë‹‰ë„¤ì„ì„ ì…ë ¥í•´ì£¼ì„¸ìš”.');
                return;
            }
            
            if (nickname.length < 2 || nickname.length > 10) {
                errorElement.textContent = 'ë‹‰ë„¤ì„ì€ 2~10ìë¡œ ì…ë ¥í•´ì£¼ì„¸ìš”.';
                errorElement.classList.add('visible');
                return;
            }
            
            // ì„œë²„ í†µì‹  ëŒ€ì‹  ì„ì‹œë¡œ ì‚¬ìš©í•  ê²€ì¦
            const isAvailable = Math.random() > 0.3; // 70% í™•ë¥ ë¡œ ì‚¬ìš© ê°€ëŠ¥
            
            if (isAvailable) {
                alert('ì‚¬ìš© ê°€ëŠ¥í•œ ë‹‰ë„¤ì„ì…ë‹ˆë‹¤.');
                errorElement.classList.remove('visible');
            } else {
                errorElement.textContent = 'ì´ë¯¸ ì‚¬ìš© ì¤‘ì¸ ë‹‰ë„¤ì„ì…ë‹ˆë‹¤.';
                errorElement.classList.add('visible');
            }
        });
        
        // ì¸ì¦ë²ˆí˜¸ ë°œì†¡
        document.getElementById('sendVerification').addEventListener('click', function() {
            const phone = document.getElementById('phone').value;
            
            if (!phone) {
                alert('ì „í™”ë²ˆí˜¸ë¥¼ ì…ë ¥í•´ì£¼ì„¸ìš”.');
                return;
            }
            
            // ì „í™”ë²ˆí˜¸ í˜•ì‹ ê²€ì‚¬
            const phoneRegex = /^01[016789]\d{7,8}$/;
            if (!phoneRegex.test(phone)) {
                alert('ì˜¬ë°”ë¥¸ ì „í™”ë²ˆí˜¸ í˜•ì‹ì´ ì•„ë‹™ë‹ˆë‹¤.');
                return;
            }
            
