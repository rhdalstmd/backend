                image: "https://via.placeholder.com/300x200/f3f4f6/9ca3af?text=ê°¤ëŸ­ì‹œ+S23",
                category: "ì „ìê¸°ê¸°",
                status: "íŒë§¤ì¤‘"
            },
            {
                id: 6,
                title: "ì•„ì´íŒ¨ë“œ í”„ë¡œ 11ì¸ì¹˜ 3ì„¸ëŒ€ 128GB WiFi",
                price: 650000,
                location: "ë…¸ì›êµ¬",
                timeAgo: "4ì¼ ì „",
                image: "https://via.placeholder.com/300x200/f3f4f6/9ca3af?text=ì•„ì´íŒ¨ë“œ+í”„ë¡œ",
                category: "ì „ìê¸°ê¸°",
                status: "íŒë§¤ì™„ë£Œ"
            }
        ];

        let filteredProducts = [...products];
        let currentFilters = {
            category: '',
            search: '',
            minPrice: '',
            maxPrice: '',
            location: '',
            priceRanges: []
        };

        // í˜ì´ì§€ ë¡œë“œ ì‹œ ì´ˆê¸°í™”
        document.addEventListener('DOMContentLoaded', function() {
            renderProducts();
            setupEventListeners();
        });

        // êµ¬ë§¤ ìš”ì²­ ë“±ë¡ í˜ì´ì§€ ì—´ê¸°
        function openCreatePost() {
            alert('íŒë§¤ ìš”ì²­ ë“±ë¡ í˜ì´ì§€ë¡œ ì´ë™í•©ë‹ˆë‹¤.');
            // ì‹¤ì œë¡œëŠ” êµ¬ë§¤ ìš”ì²­ ì‘ì„± í˜ì´ì§€ë¡œ ì´ë™
        }

        // ì´ë²¤íŠ¸ ë¦¬ìŠ¤ë„ˆ ì„¤ì •
        function setupEventListeners() {
            // ì¹´í…Œê³ ë¦¬ í•„í„°
            document.querySelectorAll('.category-item').forEach(item => {
                item.addEventListener('click', function() {
                    document.querySelectorAll('.category-item').forEach(i => i.classList.remove('active'));
                    this.classList.add('active');
                    currentFilters.category = this.dataset.category;
                    applyFilters();
                });
            });

            // ê²€ìƒ‰
            const searchInput = document.getElementById('mainSearchInput');
            if (searchInput) {
                searchInput.addEventListener('input', function() {
                    currentFilters.search = this.value;
                    applyFilters();
                });
            }

            // ê°€ê²© í•„í„°
            const minPrice = document.getElementById('minPrice');
            const maxPrice = document.getElementById('maxPrice');

            if (minPrice) {
                minPrice.addEventListener('input', function() {
                    currentFilters.minPrice = this.value;
                    applyFilters();
                });
            }

            if (maxPrice) {
                maxPrice.addEventListener('input', function() {
                    currentFilters.maxPrice = this.value;
                    applyFilters();
                });
            }

            // ê°€ê²©ëŒ€ ì²´í¬ë°•ìŠ¤
            document.querySelectorAll('input[data-range]').forEach(checkbox => {
                checkbox.addEventListener('change', function() {
                    if (this.checked) {
                        currentFilters.priceRanges.push(this.dataset.range);
                    } else {
                        currentFilters.priceRanges = currentFilters.priceRanges.filter(range => range !== this.dataset.range);
                    }
                    applyFilters();
                });
            });

            // ì§€ì—­ í•„í„°
            const locationSelect = document.getElementById('locationSelect');
            if (locationSelect) {
                locationSelect.addEventListener('change', function() {
                    currentFilters.location = this.value;
                    applyFilters();
                });
            }

            // ì •ë ¬
            const sortSelect = document.getElementById('sortSelect');
            if (sortSelect) {
                sortSelect.addEventListener('change', function() {
                    sortProducts(this.value);
                });
            }
        }

        // í•„í„° ì ìš©
        function applyFilters() {
            filteredProducts = products.filter(product => {
                // ì¹´í…Œê³ ë¦¬ í•„í„°
                if (currentFilters.category && product.category !== currentFilters.category) {
                    return false;
                }

                // ê²€ìƒ‰ í•„í„°
                if (currentFilters.search && !product.title.toLowerCase().includes(currentFilters.search.toLowerCase())) {
                    return false;
                }

                // ê°€ê²© í•„í„°
                if (currentFilters.minPrice && product.price < parseInt(currentFilters.minPrice)) {
                    return false;
                }
                if (currentFilters.maxPrice && product.price > parseInt(currentFilters.maxPrice)) {
                    return false;
                }

                // ê°€ê²©ëŒ€ í•„í„°
                if (currentFilters.priceRanges.length > 0) {
                    const inRange = currentFilters.priceRanges.some(range => {
                        const [min, max] = range.split('-').map(Number);
                        return product.price >= min && product.price <= max;
                    });
                    if (!inRange) return false;
                }

                // ì§€ì—­ í•„í„°
                if (currentFilters.location && product.location !== currentFilters.location) {
                    return false;
                }

                return true;
            });

            renderProducts();
            updateResultCount();
            updateActiveFilters();
        }

        // ìƒí’ˆ ì •ë ¬
        function sortProducts(sortType) {
            switch (sortType) {
                case 'price-low':
                    filteredProducts.sort((a, b) => a.price - b.price);
                    break;
                case 'price-high':
                    filteredProducts.sort((a, b) => b.price - a.price);
                    break;
                case 'popular':
                    filteredProducts.sort((a, b) => b.id - a.id);
                    break;
                default: // latest
                    filteredProducts.sort((a, b) => a.id - b.id);
            }
            renderProducts();
        }

        // ìƒí’ˆ ë Œë”ë§
        function renderProducts() {
            const grid = document.getElementById('productGrid');
            
            if (!grid) return;

            if (filteredProducts.length === 0) {
                grid.innerHTML = `
                    <div class="empty-state">
                        <p>ê²€ìƒ‰ ê²°ê³¼ê°€ ì—†ìŠµë‹ˆë‹¤.</p>
                        <button class="btn-primary" onclick="clearFilters()">ì „ì²´ ìƒí’ˆ ë³´ê¸°</button>
                    </div>
                `;
                return;
            }

            grid.innerHTML = filteredProducts.map(product => `
                <div class="product-card" onclick="goToProduct(${product.id})">
                    <div class="product-image">
                        <img src="${product.image}" alt="${product.title}">
                        <button class="like-btn" onclick="toggleLike(event, this)">â¤ï¸</button>
                        ${product.status !== 'íŒë§¤ì¤‘' ? `<span class="status-badge ${product.status === 'ì˜ˆì•½ì¤‘' ? 'reserved' : 'sold'}">${product.status}</span>` : ''}
                    </div>
                    <div class="product-info">
                        <h3 class="product-title">${product.title}</h3>
                        <p class="product-price">${product.price.toLocaleString()}ì›</p>
                        <div class="product-meta">
                            <span>ğŸ“ ${product.location}</span>
                            <span>${product.timeAgo}</span>
                        </div>
                    </div>
                </div>
            `).join('');
        }

        // ê²°ê³¼ ê°œìˆ˜ ì—…ë°ì´íŠ¸
        function updateResultCount() {
            const resultCount = document.getElementById('resultCount');
            if (resultCount) {
                resultCount.textContent = `ì´ ${filteredProducts.length}ê°œì˜ ìƒí’ˆ`;
            }
        }

        // í™œì„± í•„í„° í‘œì‹œ
        function updateActiveFilters() {
            const activeFiltersDiv = document.getElementById('activeFilters');
            if (!activeFiltersDiv) return;

            const filters = [];

            if (currentFilters.category) {
                filters.push(`<span class="filter-tag">${currentFilters.category}</span>`);
            }
            if (currentFilters.search) {
                filters.push(`<span class="filter-tag">"${currentFilters.search}"</span>`);
            }
            if (currentFilters.location) {
                filters.push(`<span class="filter-tag">${currentFilters.location}</span>`);
            }

            activeFiltersDiv.innerHTML = filters.join('');
        }

        // í•„í„° ì´ˆê¸°í™”
        function clearFilters() {
            currentFilters = {
                category: '',
                search: '',
                minPrice: '',
                maxPrice: '',
                location: '',
                priceRanges: []
            };

            // UI ì´ˆê¸°í™”
            document.querySelectorAll('.category-item').forEach(item => item.classList.remove('active'));
            const firstCategory = document.querySelector('.category-item[data-category=""]');
            if (firstCategory) firstCategory.classList.add('active');

            const mainSearchInput = document.getElementById('mainSearchInput');
            if (mainSearchInput) mainSearchInput.value = '';

            const minPrice = document.getElementById('minPrice');
            if (minPrice) minPrice.value = '';

            const maxPrice = document.getElementById('maxPrice');
            if (maxPrice) maxPrice.value = '';

            const locationSelect = document.getElementById('locationSelect');
            if (locationSelect) locationSelect.value = '';

            document.querySelectorAll('input[data-range]').forEach(cb => cb.checked = false);

            filteredProducts = [...products];
            renderProducts();
            updateResultCount();
            updateActiveFilters();
        }

        // ì¢‹ì•„ìš” í† ê¸€
        function toggleLike(event, button) {
            event.stopPropagation();
            button.classList.toggle('liked');
            
            // ì• ë‹ˆë©”ì´ì…˜ íš¨ê³¼
            button.style.transform = 'scale(1.2)';
            setTimeout(() => {
                button.style.transform = 'scale(1)';
            }, 150);
        }

        // ìƒí’ˆ ìƒì„¸ í˜ì´ì§€ë¡œ ì´ë™
        function goToProduct(id) {
            alert(`ìƒí’ˆ ${id} ìƒì„¸ í˜ì´ì§€ë¡œ ì´ë™í•©ë‹ˆë‹¤.`);
        }

        // ë” ë§ì€ ìƒí’ˆ ë¡œë“œ
        function loadMoreProducts() {
            alert('ë” ë§ì€ ìƒí’ˆì„ ë¡œë“œí•©ë‹ˆë‹¤.');
        }

        // ëª¨ë°”ì¼ í•„í„° í† ê¸€
        function toggleMobileFilter() {
            const sidebar = document.getElementById('filterSidebar');
            const overlay = document.getElementById('mobileOverlay');
            
            if (window.innerWidth <= 768) {
                if (sidebar) sidebar.classList.toggle('show');
                if (overlay) overlay.classList.toggle('show');
            }
        }

        // ëª¨ë°”ì¼ í•„í„° ë‹«ê¸°
        function closeMobileFilter() {
            const sidebar = document.getElementById('filterSidebar');
            const overlay = document.getElementById('mobileOverlay');
            
            if (sidebar) sidebar.classList.remove('show');
            if (overlay) overlay.classList.remove('show');
        }

        // ë„¤ë¹„ê²Œì´ì…˜ í•¨ìˆ˜ë“¤
        function goHome() {
            alert('í™ˆí˜ì´ì§€ë¡œ ì´ë™í•©ë‹ˆë‹¤.');
        }

        function goToSell() {
            alert('íŒë§¤í•˜ê¸° í˜ì´ì§€ë¡œ ì´ë™í•©ë‹ˆë‹¤.');
        }

        function goToCommunity() {
            alert('ì»¤ë®¤ë‹ˆí‹° í˜ì´ì§€ë¡œ ì´ë™í•©ë‹ˆë‹¤.');
        }

        // ìœˆë„ìš° ë¦¬ì‚¬ì´ì¦ˆ ì²˜ë¦¬
        window.addEventListener('resize', function() {
            if (window.innerWidth > 768) {
                closeMobileFilter();
            }
        });
    </script>
