            <!-- ìœ„í—˜ êµ¬ì—­ -->
            <div class="section danger">
                <h2 class="section-title">âš ï¸ ìƒí’ˆ ê´€ë¦¬</h2>
                
                <div class="form-group">
                    <label class="form-label">ìƒí’ˆ ì‚­ì œ</label>
                    <div style="display: flex; gap: 12px; margin-top: 8px;">
                        <button type="button" class="btn btn-secondary" onclick="hideProduct()">ìƒí’ˆ ìˆ¨ê¸°ê¸°</button>
                        <button type="button" class="btn btn-danger" onclick="deleteProduct()">ìƒí’ˆ ì‚­ì œ</button>
                    </div>
                    <div class="form-hint">ìƒí’ˆ ì‚­ì œ ì‹œ ëª¨ë“  ë¬¸ì˜ ë‚´ì—­ê³¼ í†µê³„ê°€ ì˜êµ¬ì ìœ¼ë¡œ ì‚­ì œë˜ë©° ë³µêµ¬í•  ìˆ˜ ì—†ìŠµë‹ˆë‹¤.</div>
                </div>
            </div>

            <!-- í¼ ì•¡ì…˜ ë²„íŠ¼ -->
            <div class="form-actions">
                <div class="action-left">
                    <button type="button" class="btn btn-secondary" onclick="goBack()">ì·¨ì†Œ</button>
                </div>
                <div class="action-right">
                    <button type="button" class="btn btn-outline" onclick="previewProduct()">ë¯¸ë¦¬ë³´ê¸°</button>
                    <button type="button" class="btn btn-outline" onclick="saveDraft()">ì„ì‹œì €ì¥</button>
                    <button type="submit" class="btn btn-primary" id="saveButton">ë“±ë¡í•˜ê¸°</button>
                </div>
            </div>
        </form>
    </div>

    <script>
        // í¼ ìš”ì†Œë“¤
        const productForm = document.getElementById('productForm');
        const imageInput = document.getElementById('imageInput');
        const imageUploadArea = document.getElementById('imageUploadArea');
        const imagePreviewGrid = document.getElementById('imagePreviewGrid');
        const productTitleInput = document.getElementById('productTitle');
        const descriptionTextarea = document.getElementById('description');
        const titleCount = document.getElementById('titleCount');
        const descriptionCount = document.getElementById('descriptionCount');
        const saveButton = document.getElementById('saveButton');

        let uploadedImages = [];

        // í˜ì´ì§€ ë¡œë“œ ì‹œ ì´ˆê¸°í™”
        window.addEventListener('load', function() {
            updateCharCounts();
            setupImageUpload();
        });

        // ê¸€ì ìˆ˜ ì¹´ìš´íŠ¸ ì—…ë°ì´íŠ¸
        function updateCharCounts() {
            titleCount.textContent = productTitleInput.value.length;
            descriptionCount.textContent = descriptionTextarea.value.length;
        }

        // ì œëª© ì…ë ¥ ì´ë²¤íŠ¸
        productTitleInput.addEventListener('input', function() {
            updateCharCounts();
            if (this.value.length > 50) {
                titleCount.style.color = '#ef4444';
            } else {
                titleCount.style.color = '#6b7280';
            }
        });

        // ì„¤ëª… ì…ë ¥ ì´ë²¤íŠ¸
        descriptionTextarea.addEventListener('input', function() {
            updateCharCounts();
            if (this.value.length > 2000) {
                descriptionCount.style.color = '#ef4444';
            } else {
                descriptionCount.style.color = '#6b7280';
            }
        });

        // ì´ë¯¸ì§€ ì—…ë¡œë“œ ì„¤ì •
        function setupImageUpload() {
            // í´ë¦­ìœ¼ë¡œ íŒŒì¼ ì„ íƒ
            imageUploadArea.addEventListener('click', function() {
                imageInput.click();
            });

            // íŒŒì¼ ì„ íƒ ì´ë²¤íŠ¸
            imageInput.addEventListener('change', function(e) {
                handleFiles(e.target.files);
            });

            // ë“œë˜ê·¸ ì•¤ ë“œë¡­ ì´ë²¤íŠ¸
            imageUploadArea.addEventListener('dragover', function(e) {
                e.preventDefault();
                this.classList.add('dragover');
            });

            imageUploadArea.addEventListener('dragleave', function(e) {
                e.preventDefault();
                this.classList.remove('dragover');
            });

            imageUploadArea.addEventListener('drop', function(e) {
                e.preventDefault();
                this.classList.remove('dragover');
                handleFiles(e.dataTransfer.files);
            });
        }

        // íŒŒì¼ ì²˜ë¦¬
        function handleFiles(files) {
            for (let file of files) {
                if (uploadedImages.length >= 10) {
                    showError('ìµœëŒ€ 10ì¥ê¹Œì§€ë§Œ ì—…ë¡œë“œ ê°€ëŠ¥í•©ë‹ˆë‹¤.');
                    break;
                }

                if (file.size > 5 * 1024 * 1024) {
                    showError(`${file.name}: íŒŒì¼ í¬ê¸°ëŠ” 5MB ì´í•˜ì—¬ì•¼ í•©ë‹ˆë‹¤.`);
                    continue;
                }

                if (!file.type.startsWith('image/')) {
                    showError(`${file.name}: ì´ë¯¸ì§€ íŒŒì¼ë§Œ ì—…ë¡œë“œ ê°€ëŠ¥í•©ë‹ˆë‹¤.`);
                    continue;
                }

                const reader = new FileReader();
                reader.onload = function(e) {
                    addImagePreview(e.target.result, file.name);
                };
                reader.readAsDataURL(file);
            }
        }

        // ì´ë¯¸ì§€ ë¯¸ë¦¬ë³´ê¸° ì¶”ê°€
        function addImagePreview(src, name) {
            const imageItem = document.createElement('div');
            imageItem.className = 'image-preview-item';
            
            const isFirst = uploadedImages.length === 0;
            
            imageItem.innerHTML = `
                <img src="${src}" alt="${name}">
                ${isFirst ? '<div class="main-badge">ëŒ€í‘œ</div>' : ''}
                <button type="button" class="remove-btn" onclick="removeImage(${uploadedImages.length + 3})">Ã—</button>
            `;
            
            imagePreviewGrid.appendChild(imageItem);
            uploadedImages.push({ src, name });
        }

        // ì´ë¯¸ì§€ ì‚­ì œ
        function removeImage(index) {
            if (index < 3) {
                // ê¸°ì¡´ ì´ë¯¸ì§€ ì‚­ì œ
                const imageItems = imagePreviewGrid.children;
                if (imageItems[index]) {
                    imageItems[index].remove();
                }
            } else {
                // ìƒˆë¡œ ì—…ë¡œë“œí•œ ì´ë¯¸ì§€ ì‚­ì œ
                const newIndex = index - 3;
                uploadedImages.splice(newIndex, 1);
                updateImagePreview();
            }
        }

        // ì´ë¯¸ì§€ ë¯¸ë¦¬ë³´ê¸° ì—…ë°ì´íŠ¸
        function updateImagePreview() {
            // ìƒˆë¡œ ì—…ë¡œë“œí•œ ì´ë¯¸ì§€ë“¤ë§Œ ë‹¤ì‹œ ë Œë”ë§
            const existingItems = Array.from(imagePreviewGrid.children).slice(0, 3);
            imagePreviewGrid.innerHTML = '';
            
            existingItems.forEach(item => imagePreviewGrid.appendChild(item));
            
            uploadedImages.forEach((image, index) => {
                addImagePreview(image.src, image.name);
            });
        }

        // í˜„ì¬ ìœ„ì¹˜ ê°€ì ¸ì˜¤ê¸°
        function getCurrentLocation() {
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(function(position) {
                    document.getElementById('location').value = 'ì„œìš¸ì‹œ ê°•ë‚¨êµ¬ (í˜„ì¬ ìœ„ì¹˜)';
                    showSuccess('í˜„ì¬ ìœ„ì¹˜ê°€ ì„¤ì •ë˜ì—ˆìŠµë‹ˆë‹¤.');
                }, function() {
                    showError('ìœ„ì¹˜ ì •ë³´ë¥¼ ê°€ì ¸ì˜¬ ìˆ˜ ì—†ìŠµë‹ˆë‹¤.');
                });
            } else {
                showError('ì´ ë¸Œë¼ìš°ì €ëŠ” ìœ„ì¹˜ ì„œë¹„ìŠ¤ë¥¼ ì§€ì›í•˜ì§€ ì•ŠìŠµë‹ˆë‹¤.');
            }
        }

        // ìƒí’ˆ ëŒì–´ì˜¬ë¦¬ê¸°
        function boostProduct() {
            if (confirm('ìƒí’ˆì„ ëŒì–´ì˜¬ë¦¬ì‹œê² ìŠµë‹ˆê¹Œ?\nì˜¤ëŠ˜ 1íšŒ ë‚¨ì•˜ìŠµë‹ˆë‹¤.')) {
                showSuccess('ìƒí’ˆì´ ëŒì–´ì˜¬ë ¤ì¡ŒìŠµë‹ˆë‹¤.');
            }
        }

        // ìƒí’ˆ ë³µì‚¬
        function copyProduct() {
            if (confirm('í˜„ì¬ ìƒí’ˆ ì •ë³´ë¥¼ ë³µì‚¬í•˜ì—¬ ìƒˆ ìƒí’ˆì„ ë“±ë¡í•˜ì‹œê² ìŠµë‹ˆê¹Œ?')) {
                showSuccess('ìƒí’ˆ ì •ë³´ê°€ ë³µì‚¬ë˜ì—ˆìŠµë‹ˆë‹¤. ìƒˆ ìƒí’ˆ ë“±ë¡ í˜ì´ì§€ë¡œ ì´ë™í•©ë‹ˆë‹¤.');
            }
        }

        // ìƒí’ˆ ìˆ¨ê¸°ê¸°
        function hideProduct() {
            if (confirm('ìƒí’ˆì„ ìˆ¨ê¸°ì‹œê² ìŠµë‹ˆê¹Œ?\nìˆ¨ê¸´ ìƒí’ˆì€ ê²€ìƒ‰ ê²°ê³¼ì— ë‚˜íƒ€ë‚˜ì§€ ì•ŠìŠµë‹ˆë‹¤.')) {
                showSuccess('ìƒí’ˆì´ ìˆ¨ê²¨ì¡ŒìŠµë‹ˆë‹¤.');
            }
        }

        // ìƒí’ˆ ì‚­ì œ
        function deleteProduct() {
            const confirmation = prompt('ìƒí’ˆì„ ì‚­ì œí•˜ë ¤ë©´ "ì‚­ì œ"ë¥¼ ì…ë ¥í•˜ì„¸ìš”:');
            if (confirmation === 'ì‚­ì œ') {
                if (confirm('ì •ë§ë¡œ ìƒí’ˆì„ ì‚­ì œí•˜ì‹œê² ìŠµë‹ˆê¹Œ?\nì´ ì‘ì—…ì€ ë˜ëŒë¦´ ìˆ˜ ì—†ìŠµë‹ˆë‹¤.')) {
                    alert('ìƒí’ˆì´ ì‚­ì œë˜ì—ˆìŠµë‹ˆë‹¤.');
                }
            } else if (confirmation !== null) {
                showError('ì…ë ¥ì´ ì˜¬ë°”ë¥´ì§€ ì•ŠìŠµë‹ˆë‹¤.');
            }
        }

        // ë¯¸ë¦¬ë³´ê¸°
        function previewProduct() {
            showSuccess('ë¯¸ë¦¬ë³´ê¸° ê¸°ëŠ¥ì€ ì¤€ë¹„ ì¤‘ì…ë‹ˆë‹¤.');
        }

        // ì„ì‹œì €ì¥
        function saveDraft() {
            showSuccess('ì„ì‹œì €ì¥ë˜ì—ˆìŠµë‹ˆë‹¤.');
        }

        // ë’¤ë¡œê°€ê¸°
        function goBack() {
            if (confirm('ë³€ê²½ì‚¬í•­ì´ ì €ì¥ë˜ì§€ ì•Šì„ ìˆ˜ ìˆìŠµë‹ˆë‹¤. ì •ë§ ë‚˜ê°€ì‹œê² ìŠµë‹ˆê¹Œ?')) {
                history.back();
            }
        }

        // í¼ ì œì¶œ
        productForm.addEventListener('submit', function(e) {
            e.preventDefault();

            if (!validateForm()) {
                return;
            }

            saveButton.disabled = true;
            saveButton.textContent = 'ì €ì¥ ì¤‘...';

            setTimeout(() => {
                showSuccess('ìƒí’ˆ ì •ë³´ê°€ ì„±ê³µì ìœ¼ë¡œ ìˆ˜ì •ë˜ì—ˆìŠµë‹ˆë‹¤.');
                saveButton.disabled = false;
                saveButton.textContent = 'ë³€ê²½ì‚¬í•­ ì €ì¥';
            }, 1500);
        });

        // í¼ ìœ íš¨ì„± ê²€ì‚¬
        function validateForm() {
            let isValid = true;

            // ì œëª© ê²€ì‚¬
            const title = productTitleInput.value.trim();
            if (!title) {
                showError('ìƒí’ˆëª…ì„ ì…ë ¥í•´ì£¼ì„¸ìš”.');
                isValid = false;
            }

            // ì¹´í…Œê³ ë¦¬ ê²€ì‚¬
            const category = document.getElementById('category').value;
            if (!category) {
                showError('ì¹´í…Œê³ ë¦¬ë¥¼ ì„ íƒí•´ì£¼ì„¸ìš”.');
                isValid = false;
            }

            // ê°€ê²© ê²€ì‚¬
            const price = document.getElementById('price').value;
            if (!price || price < 1000 || price > 50000000) {
                showError('ì˜¬ë°”ë¥¸ ê°€ê²©ì„ ì…ë ¥í•´ì£¼ì„¸ìš”.');
                isValid = false;
            }

            // ê±°ë˜ ë°©ì‹ ê²€ì‚¬
            const directTrade = document.getElementById('directTrade').checked;
            const deliveryTrade = document.getElementById('deliveryTrade').checked;
            if (!directTrade && !deliveryTrade) {
                showError('ê±°ë˜ ë°©ì‹ì„ ìµœì†Œ 1ê°œ ì´ìƒ ì„ íƒí•´ì£¼ì„¸ìš”.');
                isValid = false;
            }

            return isValid;
        }

        // ì•Œë¦¼ í‘œì‹œ í•¨ìˆ˜ë“¤
        function showSuccess(message) {
            const alert = document.getElementById('successAlert');
            alert.textContent = message;
            alert.classList.add('visible');
            setTimeout(() => alert.classList.remove('visible'), 3000);
        }

        function showError(message) {
            const alert = document.getElementById('errorAlert');
            alert.textContent = message;
            alert.classList.add('visible');
            setTimeout(() => alert.classList.remove('visible'), 3000);
        }

        // í‚¤ë³´ë“œ ë‹¨ì¶•í‚¤
        document.addEventListener('keydown', function(e) {
            if (e.ctrlKey && e.key === 's') {
                e.preventDefault();
                productForm.dispatchEvent(new Event('submit'));
            }
        });
    </script>
