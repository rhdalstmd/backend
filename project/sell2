    <script>
        let uploadedImages = [];
        
        // íŒŒì¼ ì…ë ¥ íŠ¸ë¦¬ê±°
        function triggerFileInput() {
            if (uploadedImages.length < 8) {
                document.getElementById('imageInput').click();
            }
        }
        
        // ì´ë¯¸ì§€ ì—…ë¡œë“œ ì²˜ë¦¬
        function handleImageUpload(input) {
            const files = Array.from(input.files);
            
            files.forEach(file => {
                if (uploadedImages.length >= 8) return;
                
                const reader = new FileReader();
                reader.onload = function(e) {
                    uploadedImages.push({
                        file: file,
                        url: e.target.result
                    });
                    renderImagePreview();
                    updatePreview();
                };
                reader.readAsDataURL(file);
            });
            
            // ì…ë ¥ ì´ˆê¸°í™”
            input.value = '';
        }
        
        // ì´ë¯¸ì§€ ë¯¸ë¦¬ë³´ê¸° ë Œë”ë§
        function renderImagePreview() {
            const preview = document.getElementById('imagePreview');
            const imageCount = document.getElementById('imageCount');
            
            preview.innerHTML = '';
            
            // ì—…ë¡œë“œëœ ì´ë¯¸ì§€ë“¤
            uploadedImages.forEach((image, index) => {
                const imageItem = document.createElement('div');
                imageItem.className = 'image-item';
                imageItem.innerHTML = `
                    <img src="${image.url}" alt="ìƒí’ˆ ì´ë¯¸ì§€ ${index + 1}">
                    <button class="remove-image" onclick="removeImage(${index})">Ã—</button>
                `;
                preview.appendChild(imageItem);
            });
            
            // ì—…ë¡œë“œ ë²„íŠ¼ (8ì¥ ë¯¸ë§Œì¼ ë•Œë§Œ)
            if (uploadedImages.length < 8) {
                const uploadBtn = document.createElement('div');
                uploadBtn.className = 'upload-placeholder';
                uploadBtn.onclick = triggerFileInput;
                uploadBtn.innerHTML = `
                    <span>ğŸ“·</span>
                    <p>ì‚¬ì§„ ì¶”ê°€</p>
                    <small>${uploadedImages.length}/8</small>
                `;
                preview.appendChild(uploadBtn);
            }
            
            imageCount.textContent = `${uploadedImages.length}/8`;
        }
        
        // ì´ë¯¸ì§€ ì œê±°
        function removeImage(index) {
            uploadedImages.splice(index, 1);
            renderImagePreview();
            updatePreview();
        }
        
        // ë¯¸ë¦¬ë³´ê¸° ì—…ë°ì´íŠ¸
        function updatePreview() {
            const title = document.getElementById('title').value;
            const price = document.getElementById('price').value;
            const previewImage = document.getElementById('previewImage');
            const previewTitle = document.getElementById('previewTitle');
            const previewPrice = document.getElementById('previewPrice');
            
            // ì œëª© ì—…ë°ì´íŠ¸
            previewTitle.textContent = title || 'ìƒí’ˆ ì œëª©ì„ ì…ë ¥í•´ì£¼ì„¸ìš”';
            
            // ê°€ê²© ì—…ë°ì´íŠ¸
            if (price) {
                previewPrice.textContent = parseInt(price).toLocaleString() + 'ì›';
            } else {
                previewPrice.textContent = 'ê°€ê²©ì„ ì…ë ¥í•´ì£¼ì„¸ìš”';
            }
            
            // ì´ë¯¸ì§€ ì—…ë°ì´íŠ¸
            if (uploadedImages.length > 0) {
                previewImage.innerHTML = `<img src="${uploadedImages[0].url}" alt="ë¯¸ë¦¬ë³´ê¸°">`;
            } else {
                previewImage.innerHTML = '<span>ì‚¬ì§„ì„ ì¶”ê°€í•´ì£¼ì„¸ìš”</span>';
            }
            
            // ì œëª© ê¸€ì ìˆ˜ ì—…ë°ì´íŠ¸
            updateCharCount(document.getElementById('title'), 40);
        }
        
        // ê¸€ì ìˆ˜ ì—…ë°ì´íŠ¸
        function updateCharCount(element, maxLength) {
            const countElement = document.getElementById(element.id + 'Count');
            if (countElement) {
                countElement.textContent = `${element.value.length}/${maxLength}`;
            }
        }
        
        // ìƒí’ˆ ë“±ë¡
        function submitProduct() {
            const title = document.getElementById('title').value;
            const price = document.getElementById('price').value;
            const category = document.getElementById('category').value;
            const location = document.getElementById('location').value;
            const description = document.getElementById('description').value;
            
            // ìœ íš¨ì„± ê²€ì‚¬
            if (!title.trim()) {
                showAlert('ì œëª©ì„ ì…ë ¥í•´ì£¼ì„¸ìš”.', 'error');
                return;
            }
            
            if (!price) {
                showAlert('ê°€ê²©ì„ ì…ë ¥í•´ì£¼ì„¸ìš”.', 'error');
                return;
            }
            
            if (!category) {
                showAlert('ì¹´í…Œê³ ë¦¬ë¥¼ ì„ íƒí•´ì£¼ì„¸ìš”.', 'error');
                return;
            }
            
            if (!location) {
                showAlert('ê±°ë˜ í¬ë§ ì§€ì—­ì„ ì„ íƒí•´ì£¼ì„¸ìš”.', 'error');
                return;
            }
            
            if (uploadedImages.length === 0) {
                showAlert('ìµœì†Œ 1ì¥ì˜ ìƒí’ˆ ì‚¬ì§„ì„ ì—…ë¡œë“œí•´ì£¼ì„¸ìš”.', 'error');
                return;
            }
            
            // ìƒí’ˆ ë“±ë¡ ì²˜ë¦¬ (ì‹¤ì œë¡œëŠ” ì„œë²„ë¡œ ì „ì†¡)
            const productData = {
                title,
                price: parseInt(price),
                category,
                location,
                description,
                images: uploadedImages
            };
            
            console.log('ìƒí’ˆ ë“±ë¡ ë°ì´í„°:', productData);
            showAlert('ìƒí’ˆì´ ì„±ê³µì ìœ¼ë¡œ ë“±ë¡ë˜ì—ˆìŠµë‹ˆë‹¤!', 'success');
            
            // 3ì´ˆ í›„ êµ¬ë§¤ í˜ì´ì§€ë¡œ ì´ë™
            setTimeout(() => {
                window.location.href = 'buy.html';
            }, 3000);
        }
        
        // ì„ì‹œì €ì¥
        function saveDraft() {
            const draftData = {
                title: document.getElementById('title').value,
                price: document.getElementById('price').value,
                category: document.getElementById('category').value,
                location: document.getElementById('location').value,
                description: document.getElementById('description').value,
                images: uploadedImages
            };
            
            localStorage.setItem('productDraft', JSON.stringify(draftData));
            showAlert('ì„ì‹œì €ì¥ë˜ì—ˆìŠµë‹ˆë‹¤.', 'success');
        }
        
        // ì„ì‹œì €ì¥ ë°ì´í„° ë¶ˆëŸ¬ì˜¤ê¸°
        function loadDraft() {
            const draftData = localStorage.getItem('productDraft');
            if (draftData) {
                const data = JSON.parse(draftData);
                
                document.getElementById('title').value = data.title || '';
                document.getElementById('price').value = data.price || '';
                document.getElementById('category').value = data.category || '';
                document.getElementById('location').value = data.location || '';
                document.getElementById('description').value = data.description || '';
                
                if (data.images) {
                    uploadedImages = data.images;
                    renderImagePreview();
                }
                
                updatePreview();
            }
        }
        
        // ì•Œë¦¼ í‘œì‹œ
        function showAlert(message, type) {
            // ê¸°ì¡´ ì•Œë¦¼ ì œê±°
            const existingAlert = document.querySelector('.alert');
            if (existingAlert) {
                existingAlert.remove();
            }
            
            const alert = document.createElement('div');
            alert.className = `alert alert-${type}`;
            alert.textContent = message;
            
            const form = document.querySelector('.sell-form');
            form.insertBefore(alert, form.firstChild);
            
            // 5ì´ˆ í›„ ìë™ ì œê±°
            setTimeout(() => {
                alert.remove();
            }, 5000);
        }
        
        // í˜ì´ì§€ ë¡œë“œ ì‹œ ì„ì‹œì €ì¥ ë°ì´í„° ë¶ˆëŸ¬ì˜¤ê¸°
        document.addEventListener('DOMContentLoaded', function() {
            loadDraft();
            
            // ì…ë ¥ ì´ë²¤íŠ¸ ë¦¬ìŠ¤ë„ˆ ì¶”ê°€
            document.getElementById('title').addEventListener('input', updatePreview);
            document.getElementById('price').addEventListener('input', updatePreview);
            document.getElementById('description').addEventListener('input', function() {
                updateCharCount(this, 1000);
            });
        });
        
        // í˜ì´ì§€ ë– ë‚  ë•Œ í™•ì¸
        window.addEventListener('beforeunload', function(e) {
            const title = document.getElementById('title').value;
            const price = document.getElementById('price').value;
            
            if (title || price) {
                e.preventDefault();
                e.returnValue = '';
            }
        });
    </script>
</body>
