    <script>
        // íƒ­ ì „í™˜ ê¸°ëŠ¥
        function showTab(tabName) {
            // ëª¨ë“  íƒ­ ë²„íŠ¼ ë¹„í™œì„±í™”
            document.querySelectorAll('.tab-button').forEach(btn => {
                btn.classList.remove('active');
            });
            
            // ëª¨ë“  íƒ­ ì½˜í…ì¸  ìˆ¨ê¸°ê¸°
            document.querySelectorAll('.tab-content').forEach(content => {
                content.classList.remove('active');
            });
            
            // ì„ íƒëœ íƒ­ í™œì„±í™”
            event.target.classList.add('active');
            document.getElementById(tabName).classList.add('active');
        }
        
        // ìƒí’ˆ ë³´ê¸°
        function viewProduct(id) {
            alert(`ìƒí’ˆ ${id}ë²ˆì˜ ìƒì„¸ í˜ì´ì§€ë¡œ ì´ë™í•©ë‹ˆë‹¤.`);
        }
        
        // ê²Œì‹œê¸€ ë³´ê¸°
        function viewPost(id) {
            alert(`ê²Œì‹œê¸€ ${id}ë²ˆì˜ ìƒì„¸ í˜ì´ì§€ë¡œ ì´ë™í•©ë‹ˆë‹¤.`);
        }
        
        
        
        // ë¡œê·¸ì•„ì›ƒ
        function logout() {
            if (confirm('ì •ë§ ë¡œê·¸ì•„ì›ƒ í•˜ì‹œê² ìŠµë‹ˆê¹Œ?')) {
                alert('ë¡œê·¸ì•„ì›ƒë˜ì—ˆìŠµë‹ˆë‹¤.');
                // ì‹¤ì œë¡œëŠ” ë¡œê·¸ì¸ í˜ì´ì§€ë¡œ ì´ë™
            }
        }
        
        // ìƒí’ˆ ë“±ë¡
        
        
        // ì±„íŒ… ëª©ë¡
        
        
        // í˜ì´ì§€ ë¡œë“œ ì‹œ ì´ˆê¸°í™”
        window.addEventListener('load', function() {
            // ì‚¬ìš©ì ì •ë³´ ë¡œë“œ (ì‹¤ì œë¡œëŠ” ì„œë²„ì—ì„œ ê°€ì ¸ì˜´)
            loadUserData();
        });
        
        // ì‚¬ìš©ì ë°ì´í„° ë¡œë“œ
        function loadUserData() {
            // ì‹¤ì œë¡œëŠ” ì„œë²„ API í˜¸ì¶œ
            const userData = {
                name: 'ê³µë¯¼ìŠ¹',
                email: 'user@example.com',
                profileImage: '/placeholder.svg?height=100&width=100',
                stats: {
                    selling: 15,
                    bought: 8,
                    rating: 4.8,
                    wishlist: 23
                }
            };
            
            // UI ì—…ë°ì´íŠ¸
            document.querySelector('.profile-name').textContent = userData.name;
            document.querySelector('.profile-email').textContent = userData.email;
            document.getElementById('profileImg').src = userData.profileImage;
        }
    </script>
